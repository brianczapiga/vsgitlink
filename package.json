{
  "name": "vsgitlink",
  "displayName": "VS Git Link",
  "description": "Seamlessly work with GitHub links - clone repos, navigate to specific lines, and generate shareable links",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "github",
    "link",
    "collaboration",
    "repository",
    "clone"
  ],
  "publisher": "brianczapiga",
  "repository": {
    "type": "git",
    "url": "https://github.com/brianczapiga/vsgitlink"
  },
  "homepage": "https://github.com/brianczapiga/vsgitlink",
  "bugs": {
    "url": "https://github.com/brianczapiga/vsgitlink/issues"
  },
  "configuration": {
    "title": "VS Git Link",
    "properties": {
      "vsgitlink.reposPath": {
        "type": "string",
        "default": "~/repos",
        "description": "Base path where repositories will be stored. Use ~ for home directory. Repositories will be stored in {reposPath}/{owner}/{repo} format."
      },
      "vsgitlink.defaultBranch": {
        "type": "string",
        "default": "main",
        "description": "Default branch name to use when no branch is specified in GitHub URLs."
      },
      "vsgitlink.autoSync": {
        "type": "boolean",
        "default": true,
        "description": "Automatically check and offer to sync repositories when they are behind remote."
      }
    }
  },
  "activationEvents": [
    "onCommand:vsgitlink.openGitHubLink",
    "onCommand:vsgitlink.generateGitHubLink"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsgitlink.openGitHubLink",
        "title": "Open GitHub Link",
        "category": "VS Git Link"
      },
      {
        "command": "vsgitlink.generateGitHubLink",
        "title": "Generate GitHub Link",
        "category": "VS Git Link"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vsgitlink.generateGitHubLink",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ],
      "commandPalette": [
        {
          "command": "vsgitlink.openGitHubLink"
        },
        {
          "command": "vsgitlink.generateGitHubLink"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vsgitlink.openGitHubLink",
        "key": "ctrl+shift+g o",
        "mac": "cmd+shift+g o"
      },
      {
        "command": "vsgitlink.generateGitHubLink",
        "key": "ctrl+shift+g l",
        "mac": "cmd+shift+g l"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "simple-git": "^3.19.1"
  }
}
